
#include <stdio.h>
#include <stdlib.h>

//switch case yapısıyla haftanın günlerini yazdırma

int main() {
	int gun;
	printf("Kacinci gun: ");
	scanf("%d",&gun);
	printf("\n");
	switch(gun)
	{
		case 1:printf("Pazartesi");
		break;
		case 2:printf("Sali");
		break;
		case 3:printf("Carsamba");
		break;
		case 4:printf("Persembe");
		break;
		case 5:printf("Cuma");
		break;
		case 6:printf("Cumartesi");
		break;
		case 7:printf("Pazar");
		break;
		default:printf("----- Boyle bir gun bulunmamaktadir -----");break;
		
	}
	
	
	
	return 0;
}
